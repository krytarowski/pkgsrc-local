+
+TEMPLATE_VBOXR0DRV_TOOL                = $(VBOX_GCC_TOOL)
+TEMPLATE_VBOXR0DRV_LDTOOL              = NETBSDKMODLD
+TEMPLATE_VBOXR0DRV_DEFS               += _KERNEL KLD_MODULE
